# Base image with Node.js and Yarn pre-installed
FROM node:20-alpine AS base
WORKDIR /app

# Install dependencies only when needed
FROM base AS deps
WORKDIR /app
COPY package.json yarn.lock ./
RUN yarn install --frozen-lockfile

# Rebuild the source code only when needed
FROM base AS builder
WORKDIR /app
COPY . .
COPY --from=deps /app/node_modules ./node_modules

# Set build-time environment variables
ARG STRAPI_API_TOKEN
ARG NEXT_PUBLIC_STRAPI_REST_API_URL
ARG NEXT_PUBLIC_STRAPI_HOST
ARG NEXT_PUBLIC_HOST
ARG PORT
ARG FRAMEWORK_PROVIDER
ARG APPLICATION_MODE
ARG NEXT_PUBLIC_SITE_URL
ARG NEXT_PUBLIC_DEFAULT_LANGUAGE
ARG NEXT_PUBLIC_ENABLE_MULTI_LANG
ARG NEXT_PUBLIC_AVAILABLE_LANGUAGES

# Convert ARG to ENV to be available at runtime
ENV STRAPI_API_TOKEN=$STRAPI_API_TOKEN
ENV NEXT_PUBLIC_STRAPI_REST_API_URL=$NEXT_PUBLIC_STRAPI_REST_API_URL
ENV NEXT_PUBLIC_STRAPI_HOST=$NEXT_PUBLIC_STRAPI_HOST
ENV NEXT_PUBLIC_HOST=$NEXT_PUBLIC_HOST
ENV PORT=$PORT
ENV FRAMEWORK_PROVIDER=$FRAMEWORK_PROVIDER
ENV APPLICATION_MODE=$APPLICATION_MODE
ENV NEXT_PUBLIC_SITE_URL=$NEXT_PUBLIC_SITE_URL
ENV NEXT_PUBLIC_DEFAULT_LANGUAGE=$NEXT_PUBLIC_DEFAULT_LANGUAGE
ENV NEXT_PUBLIC_ENABLE_MULTI_LANG=$NEXT_PUBLIC_ENABLE_MULTI_LANG
ENV NEXT_PUBLIC_AVAILABLE_LANGUAGES=$NEXT_PUBLIC_AVAILABLE_LANGUAGES

# Build the project
RUN yarn build

# Production image, copy all the files and run next
FROM node:20-alpine AS runner
WORKDIR /app

# Set environment variables for production
ENV NODE_ENV=production
ENV STRAPI_API_TOKEN=$STRAPI_API_TOKEN
ENV NEXT_PUBLIC_STRAPI_REST_API_URL=$NEXT_PUBLIC_STRAPI_REST_API_URL
ENV NEXT_PUBLIC_STRAPI_HOST=$NEXT_PUBLIC_STRAPI_HOST
ENV NEXT_PUBLIC_HOST=$NEXT_PUBLIC_HOST
ENV PORT=$PORT
ENV FRAMEWORK_PROVIDER=$FRAMEWORK_PROVIDER
ENV APPLICATION_MODE=$APPLICATION_MODE
ENV NEXT_PUBLIC_SITE_URL=$NEXT_PUBLIC_SITE_URL
ENV NEXT_PUBLIC_DEFAULT_LANGUAGE=$NEXT_PUBLIC_DEFAULT_LANGUAGE
ENV NEXT_PUBLIC_ENABLE_MULTI_LANG=$NEXT_PUBLIC_ENABLE_MULTI_LANG
ENV NEXT_PUBLIC_AVAILABLE_LANGUAGES=$NEXT_PUBLIC_AVAILABLE_LANGUAGES

# Copy all necessary files from builder
COPY --from=builder /app/public ./public
COPY --from=builder /app/.next ./.next
COPY --from=builder /app/node_modules ./node_modules
COPY --from=builder /app/package.json ./package.json

# Expose the application port
EXPOSE 3000

# Start the Next.js application
CMD ["sh", "-c", "PORT=${PORT:-3000} yarn start"]
