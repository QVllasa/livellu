{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "Post",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "text": {
      "type": "text",
      "required": true
    },
    "slug": {
      "type": "text",
      "required": true
    },
    "summary": {
      "type": "text",
      "required": true
    },
    "author": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "admin::user"
    },
    "article_categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::article-category.article-category",
      "inversedBy": "posts"
    },
    "article_tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::article-tag.article-tag",
      "inversedBy": "posts"
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "seo.seo"
    },
    "related_posts": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::post.post"
    },
    "sections": {
      "type": "component",
      "repeatable": true,
      "component": "article.article-section"
    },
    "featured_image": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false
    },
    "context": {
      "type": "text"
    }
  }
}
